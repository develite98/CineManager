<UserControl x:Class="ProjectVideo.UserControlS.ControlBars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectVideo.UserControlS"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             x:Name="controlbar">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/br5.jpg">
            </ImageBrush>

        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
            <ColumnDefinition Width="70"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Home Cinema"
               FontSize="25"
               FontWeight="Bold" FontFamily="Star Jedi" Opacity="0.8" HorizontalAlignment="Center" Margin="50,0,0,0"/>
        <Button Command="{Binding CloseWindow}" FontFamily="Star Jedi" CommandParameter="{Binding ElementName=controlbar}" Background="DarkRed" Margin="5" Grid.Column="2">
            Exit
        </Button>
    </Grid>
</UserControl>
