<Window x:Class="ProjectVideo.messageBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectVideo"
             mc:Ignorable="d" 
             Height="170" Width="300"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
             >
    <Grid Background="PaleVioletRed">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel>
            <Button Click="Button_Click" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top">X</Button>
        </DockPanel>
        <Label Margin="0 15 0 0" x:Name="lbMess" FontSize="30" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">aa</Label>
    </Grid>
</Window>
