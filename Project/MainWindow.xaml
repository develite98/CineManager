                    <Button      x:Name="btnLogin"
                                 Command="{Binding LoginCommand}"
                                 CommandParameter="{Binding ElementName=MainViewWindow}"
                                 Width="100"
                                 Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                 Grid.Column="0"
                                    FontSize="12"
                                    Background="DarkGray"
                                    Margin="5" Content="Sign In"/>
                    <Label Margin="0 10 0 0" HorizontalAlignment="Center">
                        Don't have account ?
                    </Label>
                    <Button         x:Name="btnSigup"
                                    Width="100"
                                    Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                    Grid.Column="0"
                                    FontSize="12"
                                    Background="DimGray"      
                                    Margin="0" Content="Sign Up"
                                    Command="{Binding SignUpCommand}"
                                    CommandParameter="{Binding ElementName=MainViewWindow}"/>
                </StackPanel>
                <Label Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="White" Opacity="0.7">Version 2.v0.2</Label>
                <!--////////////////////-->
                <!--User-->
                <WrapPanel Margin="10 0 0 0" VerticalAlignment="Center"  Grid.Row="0" x:Name="UserInfo" Visibility="Collapsed">
                    <Ellipse  Height="75" Width="75" x:Name="userImage">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="imageUser" ImageSource="/Resources/userImage.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel>
                    <TextBlock Margin="10" x:Name="txtUserName" Visibility="Collapsed"/>
                    <TextBlock Margin="10" x:Name="txtFullName" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Opacity=".8"><Run Text="Tom"/></TextBlock>
                    </StackPanel>

                </WrapPanel>
                <StackPanel Grid.Row="1" x:Name="userInfoTool" Visibility="Collapsed">
                    <WrapPanel HorizontalAlignment="Center">
                    <Button Margin="0 15 0 0"
                            x:Name="BtnEditInfo"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatButton}" 
                            Click="BtnEditInfo_Click"
                            Content="Edit"
                            />
                        <Button Margin="0 15 0 0"
                            x:Name="btnLogout"
                            HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Content="Logout"
                            Command="{Binding LogoutCommand}"
                            CommandParameter="{Binding ElementName=MainViewWindow}"
                            />
                    </WrapPanel>
                    <Button  x:Name="btnMyPlayList" HorizontalAlignment="Center" Width="140" Click="BtnMyPlaylist_Click_1" Content="Favorite film">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF00D69C" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>
                    
                </StackPanel>
                <!--//////////////-->
                <!--Admin-->
                <WrapPanel Margin="10 0 0 0" Grid.Row="0" x:Name="AdminInfo" Visibility="Collapsed" VerticalAlignment="Center">
                    <Ellipse  Height="75" Width="75" x:Name="adminImage">
                        <Ellipse.Fill>
                            <ImageBrush x:Name="imageAdmin" ImageSource="/Resources/userImage.jpg"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock x:Name="txtAdminName" Margin="10" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Opacity=".8" >Admin</TextBlock>
                    
                </WrapPanel>
                <StackPanel Grid.Row="1" x:Name="adminInfoTool" Visibility="Collapsed">
                    <Button HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignFlatButton}" Margin="0 4 0 0"
                            Content="Log out"
                            Command="{Binding LogoutCommand}"
                            CommandParameter="{Binding ElementName=MainViewWindow}"
                            />
                    <Button x:Name="AminTool" Click="AminTool_Click" Margin="5" HorizontalAlignment="Center" Width="150">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF00D69C" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <WrapPanel>
                            <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center"/>
                            <Label Foreground="White" Content="Admin Tool"/>
                        </WrapPanel>
                    </Button>
                    <Button x:Name="ChartTool" Click="ChartTool_Click" Margin="5" HorizontalAlignment="Center" Width="150">
                        <Button.Background>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0"/>
                                <GradientStop Color="#FF00D69C" Offset="1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <WrapPanel>
                            <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center"/>
                            <Label Foreground="White" Content="Chart"/>
                        </WrapPanel>
                    </Button>
                </StackPanel>
                <!-- ///////////// -->
            </Grid>
            <Grid x:Name="GridINFOFILM" Background="Transparent"  Width="500" Height="600" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="-720 0 0 0" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Grid.RenderTransform>
                <materialDesign:Card Width="450" Height="506" VerticalAlignment="Center" Margin="25,62,25,32">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="250" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <MediaElement x:Name="trailerFilm" Source="Resources/br3.jpg" LoadedBehavior="Manual" Height="250" Stretch="UniformToFill">
                            
                        </MediaElement>
                        <Button x:Name="playVideo"
                                Click="BtnPlay_Click"
                                Tag="{Binding ID}"
                                Grid.Row="0"
                                Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Margin="0,0,16,159" BorderBrush="{x:Null}"  Height="64" Grid.RowSpan="2" Width="62">
                            <Button.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="Black" Offset="1"/>
                                    <GradientStop Color="#FFD41C09" Offset="0.471"/>
                                </RadialGradientBrush>
                            </Button.Background>

                            <materialDesign:PackIcon Foreground="White" Kind="Play" Height="40" Width="40"></materialDesign:PackIcon>
                        </Button>
                        <StackPanel Grid.Row="1" Margin="8 24 8 4">
                            <TextBlock Style="{StaticResource MaterialDesignSubheadingTextBlock}"
                                       x:Name="txtNameFilm"
                                       FontWeight="Bold"
                                       FontSize="20"
                                       Margin="0"/>
                            <Viewbox Margin="0 4 0 8"
                                     Height="16"
                                     HorizontalAlignment="Left">
                                <materialDesign:RatingBar Value="3"
                                                          Orientation="Horizontal"
                                                          Foreground="Gold"
                                                          Margin="0" />
                            </Viewbox>
                            <TextBlock
                                x:Name="txtInfoFilm"
                                Style="{StaticResource MaterialDesignBody1TextBlock}"
                                TextWrapping="Wrap"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                        <Separator Grid.Row="2" Style="{StaticResource MaterialDesignDarkSeparator}" Margin="8 0 8 0" />
                        <StackPanel
                            HorizontalAlignment="Left"
                            Grid.Row="5"
                            Orientation="Horizontal"
                            Margin="8">
                            <Button
                                Style="{StaticResource MaterialDesignToolButton}"
                                Width="50"
                                Padding="2 0 2 0"
                                materialDesign:RippleAssist.IsCentered="True">
                                <materialDesign:PackIcon Kind="ShareVariant" />
                            </Button>
                            <Button
                                Style="{StaticResource MaterialDesignToolButton}"
                                Width="50"
                                Padding="2 0 2 0"
                                materialDesign:RippleAssist.IsCentered="True">
                                <materialDesign:PackIcon Kind="Heart" />
                            </Button>
                        </StackPanel>

                    </Grid>
                </materialDesign:Card>
                <Button 
                    x:Name="btnBackHome"
                    Click="BtnBackHome_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                                HorizontalAlignment="Left"
                                Margin="394,538,0,19" Height="Auto" >
                    <Button.Background>
                        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FF00D69C" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                    <Button.Content>
                        <WrapPanel>
                            <materialDesign:PackIcon VerticalAlignment="Center" Kind="ArrowBack"></materialDesign:PackIcon>
                            <Label Foreground="White">HOME</Label>
                        </WrapPanel>
                    </Button.Content>
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="ButtonBase.Click">
                            <BeginStoryboard Storyboard="{StaticResource CloseInfo}"/>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>
            </Grid>
            <!--Phần giao diện chính-->
        </Grid>
    </Grid>
</Window>






