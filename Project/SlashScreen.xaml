<Window x:Class="ProjectVideo.SlashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectVideo"
        mc:Ignorable="d"
        Title="SlashScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Height="200"
        Width="400">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="/Resources/br3.jpg" Stretch="Fill" Opacity="0.9"></ImageBrush>
        </Grid.Background>
        <StackPanel Width="250" VerticalAlignment="Center">
            <ProgressBar Background="DarkViolet" Height="15" x:Name="progressBar" />
            <TextBlock Foreground="White" HorizontalAlignment="Center"
                       VerticalAlignment="Center">Loading...</TextBlock>
        </StackPanel>
    </Grid>
</Window>
